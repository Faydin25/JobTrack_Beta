@model IEnumerable<MyApplication.Web.Models.News>

@{
    ViewData["Title"] = "Haber Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Haber Listesi</h2>
        <a asp-action="CreateNews" class="btn btn-success">Yeni Haber Ekle</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Yayınlanma Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.PublishedDate)</td>
                    <td>
                        <a asp-action="EditNews" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a> |
                        <a asp-action="DeleteNews" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 