@model IEnumerable<MyApplication.Web.Models.LeaveRequest>
@{
    ViewData["Title"] = "İzin Talepleri";
}

<div class="container mt-5">
    <h2 class="mb-4">İzin Talepleri</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Kullanıcı</th>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User?.UserName</td>
                    <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.Description</td>
                    <td>
                        @if (item.IsApproved)
                        {
                            <span class="badge bg-success">Onaylandı</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Bekliyor</span>
                        }
                    </td>
                    <td>
                        @if (!item.IsApproved)
                        {
                            <form asp-action="ApproveLeaveRequest" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="isApproved" value="true" />
                                <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                            </form>
                        }
                        <form asp-action="ApproveLeaveRequest" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="hidden" name="isApproved" value="false" />
                            <button type="submit" class="btn btn-danger btn-sm">Reddet</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 