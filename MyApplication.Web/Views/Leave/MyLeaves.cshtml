@model IEnumerable<MyApplication.Web.Models.LeaveRequest>
@using MyApplication.Web.Models

@{
    ViewData["Title"] = "İzinlerim";
}
<div class="container mt-5">
    <h2 class="mb-4">İzinlerim</h2>
    <a class="btn btn-success mb-3" href="@Url.Action("Request", "Leave")">Yeni İzin Başvurusu</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Başlangıç</th>
                <th>Bitiş</th>
                <th>Göreve Başlama</th>
                <th>Açıklama</th>
                <th>Onay Durumu</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@item.ReturnDate.ToString("yyyy-MM-dd")</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Status == LeaveRequestStatus.Approved)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else if (item.Status == LeaveRequestStatus.Rejected)
                    {
                        <span class="badge bg-danger">Reddedildi</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Bekliyor</span>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 